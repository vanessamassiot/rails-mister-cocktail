<div class="banner">
  <div>
    <h1> Cocktails</h1>
    <p> Discover our wonderful cocktails</p>
  </div>
</div>


<div class= "container">
    <div class= "row col-xs-12">
    	<% @cocktails.each do |cocktail| %>
            <% if cocktail.photo.attached? %>
              <div class="card col-xs-12 col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill%>')" >
              <div class="card-description">
                <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
              </div>
              <p>
                <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
              </p>
              <div class="card-user">
                <%= link_to cocktail, method: "delete", data: { confirm: 'Are you sure?' } do %>
                   <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
              </div>
            <%else %>
              <div class="card col-xs-12 col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), height: 300, width: 400, crop: :fill%>')" >
                <div class="card-description">
                  <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
                </div>
                <div class="card-btn">
                  <%= link_to 'Edit', edit_cocktail_path(cocktail)%>
                  <%= link_to 'Destroy', cocktail, method: "delete", data: { confirm: 'Are you sure?' }%>
                </div>
              </div>
            <%end %>
      <% end %>
    </div>
</div>


